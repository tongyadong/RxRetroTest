<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.humax.toy.rxretrotest.activity.MainActivity">

    <Button
        android:onClick="jumpToRxRetrofitActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="learn RxRetrofit"/>

    <Button
        android:layout_marginTop="20dp"
        android:onClick="jumpToRxAndroidActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="learn RxAndroid"/>

    <Button
        android:layout_marginTop="20dp"
        android:onClick="jumpToRxAutoAdapterActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="learn AutoAdapter"/>

    <Button
        android:layout_marginTop="20dp"
        android:onClick="jumpToMultiActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="learn AutoAdapter2"/>

    <Button
        android:layout_marginTop="20dp"
        android:onClick="jumpToRxJavaActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="learn RxJava"/>

</LinearLayout>