<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.humax.toy.rxretrotest"
          xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.RxRetrofitActivity"/>

        <activity android:name=".activity.RxAndroidActivity"/>

        <activity android:name=".activity.AutoAdapterActivity"/>
        <activity android:name=".activity.MultiItemsAdapterActivity"/>
        <activity android:name=".activity.RxJavaActivity"/>

    </application>

</manifest>
